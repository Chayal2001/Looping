#include<iostream>
using namespace std;

void print_pattern();
/*Function to print the pattern */

void print_pattern()
{
        /* Function to print the pattern */
        
              int n = 5;
    for(int i=1; i<=n; i++){
        for(int j=1; j<=i; j++){
            cout<<"*";
        }
        for(int j=1; j<= n-i; j++){
            cout<<" ";
        }
                for(int j=1; j<=i; j++){
            cout<<"*";
        }
            
        cout<<endl;
             
    }
